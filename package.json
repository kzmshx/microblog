{
  "name": "microblog",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "example-warikan:build": "turbo build --scope=example-warikan-*",
    "example-warikan:dev": "turbo dev --scope=example-warikan-*",
    "example-warikan:lint": "turbo lint --scope=example-warikan-*",
    "example-warikan:start": "turbo start --scope=example-warikan-*",
    "example-warikan:start:e2e": "turbo start:e2e --scope=example-warikan-*",
    "example-warikan:test": "turbo test --scope=example-warikan-*",
    "example-warikan:test:watch": "turbo test:watch --scope=example-warikan-*",
    "format": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx,md,mdx}\"",
    "lint": "turbo lint"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
